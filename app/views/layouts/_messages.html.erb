<% flash.each do |key, value| %>
  <div class="container">
    <div class="row">
      <div class="col-md-4">
      </div> 
        <div class="col-md-4">  
          <div class="alert alert-<%= key == "notice" ? "success" : "danger" %>">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>    
            <%= value %>
          </div>    
        </div>
        <div class="col-md-4">
        </div> 
    </div>  
  </div>
<% end %>
